ZSH_PLUGIN_FOLDER=~/.zsh
GIT_USERNAME="zsh-users"

load_plugin() {
    if [ $# -eq 2 ]; then
        GIT_USERNAME="$2"
    elif [ $# -ne 1 ]; then
        echo "No plugin provided for load plugin"
    fi
    if [ ! -d $ZSH_PLUGIN_FOLDER/$1 ]; then
       git clone https://github.com/$GIT_USERNAME/$1.git $ZSH_PLUGIN_FOLDER/$1
    fi
    source $ZSH_PLUGIN_FOLDER/$1/$1.zsh
}
